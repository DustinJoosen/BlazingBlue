mapscripts Knowhere_PlayerHouse_MapScripts {}

script Knowhere_PlayerHouse_EventScript_WallClock {
    lockall

    if (flag(FLAG_SET_WALL_CLOCK) == TRUE) {
        releaseall
        return
    }

    msgbox(ClockIsStopped)
    call(SetWallClock)

    delay(30)
    setflag(FLAG_SET_WALL_CLOCK)

    releaseall
}


script SetWallClock {
    fadescreen(FADE_TO_BLACK)
    special(StartWallClock)
    waitstate
}

text ClockIsStopped {
    "The clock is stopped...\p"
    "Better set it!$"
}
